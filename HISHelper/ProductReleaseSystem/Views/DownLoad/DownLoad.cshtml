    //动态添加产品信息
    function ProductsDownload() {
        $.ajax({
            type: 'POST',
            url: 'productsdownload',
            success: function (obj) {
                var trstring = '';
                if (obj.List.length != 0) {
                    trstring += '<h2 class="h2" >产品列表</h2 >';
                    $(obj.List).each(function (index, item) {
                        trstring += '<li v-on:click(ClickProduct()) >' + item.ProductName;
                        trstring += '<span class="glyphicon glyphicon-hand-right" v-model="accountInfo.ID">' + item.ID + '</span>';
                        trstring += '</li>';
                    });
                    $('.product').html(trstring);
                } else {
                    $('.product').html("");
                }
            },
            error: function (error) {
                alert(error.status + error.statusText);
            }
        })
    }


