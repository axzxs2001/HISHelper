    <script>
        //添加产品
        function AddProdect() {
            alert($('#product-name').val());
            $.ajax({
                type: "Post",
                url: "/addproduct",
                data: { ProductName: $("#product-name").val(), Description: $('#product-describe').val() },
                success: function (dataBack) {
                    alert(dataBack);
                },
                error: function (error) {
                    alert(error.status + error.statusText)

                }
            });

        }
        //添加版本
        function AddVersion() {
            $.ajax({
                type: "post",
                url: "/addversion",
                data: { VersionNumber: $('#version-no').val(), ReleaseTime: $('#version-date').val(), Publisher: $('#upload-name').val(), ProductId:1 /*$('.hid').val()*/, Description: $('#version-describe').val() },
                success: function (dataBack) {
                    alert(dataBack)

                },
                error: function (error) {

                    alert(error.status + error.statusText)
                }
            });

        }
        
        //查询所有项目
        function QueryProducts() {
            $.ajax({
                type: "GET",
                url: '/queryproducts',
                data: {},
                success: function (dataBack) {
                    alert(dataBack.data)
                    var str = '';
                    $(dataBack.data).each(function (index, item) {
                        str += '<li onclick=GetID('+item.ID+');>'
                        str += item.ProductName
                        str += '<span class="hid" style="display:none">' + item.ID + '</span>';
                        str += '<span class="glyphicon glyphicon-hand-right"></span>';
                        str += '</li>'
                    });
                    $(".product").html(str);
                    $(".product li").on('click', 'li', function (event) {
                    });
                    $(".product li").click(function (event) {
                        $(".product").css({ 'background': 'rgba(0,0,0,0.8)', 'color': '#fff' });
                        $(".product li").css({ 'background': '', 'color': '' });
                        $(this).css({ 'background': '#fff', 'color': '#000' });
                    });

                   
                },
                error: function (error) {
                    alert(error.status + error.statusText)

                }
            });

        }
        //按照产品ID获取版本
        function QueryVersions(id) {
            
            alert(id);
            
            $.ajax({
                type: "GET",
                url: '/queryversions',
                data: { ProductID: id },
                success: function (dataBack) {
                    var str = '';
                    $(dataBack.data).each(function (index, item) {
                        str += '<li onclick="GetVersionID(' + item.ID + ');">';
                        str += '<span>'+"产品名：" + item.产品名 + '</span>';
                        str += '<span>' + "版本号：" + item.版本号 + '</span>';
                        str += '<span>' + "发布人：" + item.发布人 + '</span>';
                        str += '<span>' + "发布时间" + item.发布时间 + '</span>';
                        str += '<span class="hid" style="display:none">' + item.ID + '</span>';
                        str += '<span class="glyphicon glyphicon-hand-down"></span>';
                        str += '</li>';
                    });
                    $(".version").html(str);
                    $(".version li").on('click', 'li', function (event) {
                    });
                    $(".version li").click(function (event) {
                        $(".version").css({ 'background': '#fff', 'color': '#000' });
                        $(".product li").css({ 'background': '', 'color': '' });
                        $(this).css({ 'background': '#000', 'color': '#fff' });
                    });
                },
                error: function (error) {
                    alert(error.status + error.statusText)

                }
            });

        }

        function UpFile() {
            alert($('#versionID').val())
            var file = $('#upload-file').get(0).files[0];
            var data = new FormData();
            data.append(file.name, file);
            data.append("UploadPeople", 1);
            data.append("VersionsID", $('#versionID').val());
            $.ajax({
                type: 'POST',
                url: '/sendfile',
                contentType: false,
                processData: false,
                data: data,
                success: function (dataBack) {
                    alert(dataBack.message);

                },
                error: function (error) {

                    alert(error.status + error.statusText)
                }
            });

        }


        function GetID(elem) {
            $('#hid').val(elem);
            QueryVersions(elem);
           

        }

        function GetVersionID(e) {
            $('#versionID').val(e);
            alert(e);

        }

        $(document).ready(function () {
            $('#version-date').datetimepicker({
                timepicker: false,
                format: 'Y-m-d',
