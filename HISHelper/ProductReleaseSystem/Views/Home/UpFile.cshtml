    <script>
        function UpFile() {
            var file = $('#exampleInputFile').get(0).files[0];
            var data = new FormData();
            data.append(file.name, file);
            $.ajax({
                type: 'POST',
                url: '/sendfile',
                contentType: false,
                processData: false,
                data: data,
                success: function (dataBack) {
                    alert(dataBack.message);

                },
                error: function (error) {

                    alert(error.status + error.statusText)
                }
            });

        }
        $(document).ready(function () {
            $('#version-date').datetimepicker({
                timepicker: false,
                format: 'Y-m-d',
                lang: 'ch',
                // 开始年份
                yearStart: 1900,
                // 不默认当前时间
                validateOnBlur: false,
                //阻止滚动鼠标滑轮滑动改变时间
                scrollInput: false
            });
            /*列表显示上传文件信息*/
            var test = document.getElementById('upload-file');
            test.addEventListener('change', function () {
                var t_files = this.files;
                var str = '';
                var myDate = new Date();
                for (var i = 0, len = t_files.length; i < len; i++) {
                    str += '<li>名称：' + t_files[i].name + '上传时间:' + myDate.toLocaleString() + '上传人：张三</li>';
                };
                document.getElementById('upload-file-news').innerHTML = str;
            }, false);


            /*二级联动*/
            // 创建一个二维数组
            var arr = new Array(2);
            arr[0] = ["新技术研究中心", "张三", "李四", "王五"];
            arr[1] = ["接口", "赵六", "钱七", "刘八"];
            $("#department").change(function (event) {
                var val = $(this).val();
                // 获取city的select
                var person = document.getElementById("person");
                // 获取option
                var personOp = person.getElementsByTagName("option");
                // 设置可操作
                person.disabled = false;
                // 先删除，后添加
                for (var i = 0; i < personOp.length; i++) {
                    var op = personOp[i];
                    // 删除option
                    person.removeChild(op);
                    //数组长度发生变化，需处理
                    i--;
                }
                // 遍历
                for (var i = 0; i < arr.length; i++) {
                    //取一维数组
                    var arr1 = arr[i];
                    //取一维数组的第一个值
                    var firstVal = arr1[0];
                    //判断
                    if (firstVal == val) {
                        //遍历
                        for (var j = 1; j < arr1.length; j++) {
                            // 获取城市名
                            var value = arr1[j];
                            // 创建option
                            var optionl = document.createElement("option");
                            // 创建文本
                            var textl = document.createTextNode(value);
                            // 把文本添加到标签
                            optionl.appendChild(textl);
                            //添加到city里面
                            person.appendChild(optionl);
                        }
                    }
                }
            });
            /*弹出产品模态层*/
            $(".add-product").click(function (event) {
                $('#prductModal').modal('show');
            });
            /*关闭产品模态层*/
            $("#close-product").click(function (event) {
                $('#prductModal').modal('hide');
            });
            /*弹出产品模态层*/
            $(".add-version").click(function (event) {
                $('#versionModal').modal('show');
            });
            /*关闭产品模态层*/
            $("#close-version").click(function (event) {
                $('#versionModal').modal('hide');
            });
        });
        //查询全部产品列表
        var app4 = new Vue({
