            //    };
            //    document.getElementById('upload-file-news').innerHTML = str;
            //}, false);


            /*二级联动*/
            // 创建一个二维数组
            var arr = new Array(2);
            arr[0] = ["新技术研究中心", "张三", "李四", "王五"];
            arr[1] = ["接口", "赵六", "钱七", "刘八"];
            $("#department").change(function (event) {
                var val = $(this).val();
                // 获取city的select
                var person = document.getElementById("person");
                // 获取option
                var personOp = person.getElementsByTagName("option");
                // 设置可操作
                person.disabled = false;
                // 先删除，后添加
                for (var i = 0; i < personOp.length; i++) {
                    var op = personOp[i];
                    // 删除option
                    person.removeChild(op);
                    //数组长度发生变化，需处理
                    i--;
                }
                // 遍历
                for (var i = 0; i < arr.length; i++) {
                    //取一维数组
                    var arr1 = arr[i];
                    //取一维数组的第一个值
                    var firstVal = arr1[0];
                    //判断
                    if (firstVal == val) {
                        //遍历
                        for (var j = 1; j < arr1.length; j++) {
                            // 获取城市名
                            var value = arr1[j];
                            // 创建option
                            var optionl = document.createElement("option");
                            // 创建文本
                            var textl = document.createTextNode(value);
                            // 把文本添加到标签
                            optionl.appendChild(textl);
                            //添加到city里面
                            person.appendChild(optionl);
                        }
                    }
                }
            });
            /*弹出产品模态层*/
            $(".add-product").click(function (event) {
                $('#prductModal').modal('show');
            });
            /*关闭产品模态层*/
            $("#close-product").click(function (event) {
                $('#prductModal').modal('hide');
              
                AddProdect();
                QueryProducts();
            });
            /*弹出产品模态层*/
            $(".add-version").click(function (event) {
                $('#versionModal').modal('show');
            });
            /*关闭产品模态层*/
            $("#close-version").click(function (event) {
                $('#versionModal').modal('hide');
                AddVersion();
            });
            QueryProducts();
        });

