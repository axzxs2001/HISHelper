        //查询需求详细信息
        function QueryDetailedRequirements() {
            $.ajax({
                type: "POST",
                url: "/querydetailedrequirements",
                data: { id: 24 },
                success: function (dataBack) {
                    var str = "";
                    var str1 = "";
                    var str2 = "";
                    var str4 = "";
                    var str5 = "";
                    var str6 = "";
                    $(dataBack.data).each(function (index, item) {
                        str += " <li class='lt' style='width:30%;'>标题："+item.标题+"</li>";
                        str += "<li class='lt' style='width:30%;'> 电话："+item.电话+"</li >";
                        str += " <li class='lt' > 发布人：" + item.发布人姓名 + "</li >";

                        str1 += "<li class='lt' style='width:30%;'>发布时间：" + item.发布时间 + "</li>";
                        str1 += "<li class='lt' style='width:30%;'>邮箱："+item.Email+"</li >";
                        str1 += "<li class='lt'>QQ："+ item.QQ+"</li>";

                        str2 += "<li class='lt' style='width:30%;'> 优先级：" + item.优先级 + "</li >";
                        str2 += "<li class='lt' style='width:30%;'>交付部门：" +item.交付部门+"</li>";
                        

                        str4 += "<li class='lt' style='width:30%;'>医院名称："+item.医院名称+"</li>";
                        str4 += "<li class='lt' style='width:30%;'>院方联系人名称："+item.提出者姓名+"</li >";
                        str4 += "<li class='lt'>联系电话：" + item.医院联系方式+"</li>";

                        str5 += "<li class='lt'>所在地：" + item.医院地址 + "</li>";

                        str6 += item.详细需求;
                    })
                    $("#fbb1").html(str);
                    $("#fbb2").html(str1);
                    $("#fbb3").html(str2);
                    $("#fbb4").html(str4);
                    $("#fbb5").html(str5);
                    $("#fbb6").html(str6);
                },
                error: function (error) {
                    alert(error.status + error.statusText)
                }
            })
        }

        //查询人员意见
        function QueryOpinion() {
            $.ajax({
                type: "POST",
                url: "/queryopinion",
                data: { id: 24 }, 
                success: function (dataBack) {
                    if (dataBack.data != "") {
                        $("#fbbb1").css("display", "block");
                        var str = "";
                        $(dataBack.data).each(function (index, item) {
                            str += "<ul class='fbb'>";
                            str += "<li class='lt asdf' style='font- size:18px; padding - top:20px; width:30%'>目的：" + item.目的 + "</li>";
                            str += "<li class='lt asdf' style='font- size:18px; padding - top:20px; width:30%'>发起人姓名：" + item.发起人姓名 + "</li>";
                            str += "<li class='lt asdf' style='font- size:18px; padding - top:20px;'>电话：" + item.电话 + "</li>";
                            str += "</ul>";
                            str += "<ul class='fbb' style='last-style:none'>";
                            str += "<li class='lt asdf' style='font- size:18px; padding - top:20px;width:30%'>QQ：" + item.QQ + "</li>";
                            str += "<li class='lt asdf' style='font- size:18px; padding - top:20px;width:52%'>发起时间：" + item.发起时间 + "</li>";
                            str += "<li class='lt asdf' style='font- size:18px; padding - top:20px;margin-top:20px;max-width:94%;width:100%;word-wrap: break-word;'>内容：" + item.详细 + "</li>";
                            if (index < dataBack.data.length - 1) {
                                str += "<li class='lt asdf' style='border:1px dashed #c3c3c3;width:70%;height:1px;margin-top:20px;margin-bottom:10px;margin-left:90px'></li>";
                            }
                            str += "</ul>";
                        })
                        $("#fbbb2").html(str);
                    } 
                },
                error: function (error) {
                    alert(error.status + error.statusText)
                }
            })
        }

        //添加人员意见
        function AddOpinion() {
            if (CheckOpinionNull()){
                $.ajax({
                    type: "POST",
                    url: "/addopinion",
                    data: { DemandID: 24, proposerID: 8, purpose: $("#purpose1").val(), detailed: $("#text1").val() },
                    success: function (dataBack) {
                        if (dataBack.result==1) {
                            layer.msg(dataBack.message, { icon: 1 });
                            QueryOpinion();
                            $("#purpose1").val('');
                            detailed: $("#text1").val('');
                        }
                    },
                    error: function (error) {
                        layer.msg(dataBack.message, { icon: 2 });
                    }
                })
            }
        }

        //非空验证
        function CheckOpinionNull() {
            var str="";
            var purpose1 = document.getElementById("purpose1").value.replace(/[]/g, "");
            var text11 = document.getElementById("text1").value.replace(/[]/g, "");
            if (purpose1.length == 0 || purpose1 == "必填：请输入新增活修改的目的") {
                layer.msg("请输入修改目的", { icon: 2 });
                return false;
            } else if (!purpose1.match(/^[\u4e00-\u9fa5]{1,11}$|^[\dA-Za-z_]{1,22}$/)) {
                str += "新增或修改目的只能输入11个汉字或22个字母！";
                $('#purpose1').focus();
                layer.msg(str, { icon: 2 });
                return false;
            }
            else if (text11.length == 0 || text11 == "请输入要增加或者修改的内容") {
                layer.msg("请输入内容", { icon: 2 });
                return false;
            } else {
                return true;

            }

        }

